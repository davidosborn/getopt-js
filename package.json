{
	"name": "@davidosborn/getopt",
	"version": "0.0.14",
	"description": "A full-featured parser for command-line arguments",
	"keywords": [
		"argument",
		"arguments",
		"getopt",
		"getopts",
		"option",
		"options",
		"parse",
		"parser"
	],
	"homepage": "https://github.com/davidosborn/getopt#readme",
	"bugs": {
		"url": "https://github.com/davidosborn/getopt/issues",
		"email": "davidcosborn@gmail.com"
	},
	"license": "MIT",
	"author": {
		"name": "David Osborn",
		"email": "davidcosborn@gmail.com",
		"url": "https://davidosborn.dev/"
	},
	"type": "module",
	"files": [
		"doc",
		"src"
	],
	"main": "index.js",
	"bin": "index.js",
	"directories": {
		"doc": "doc/json/bin"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/davidosborn/getopt"
	},
	"scripts": {
		"build": "npm run doc",
		"clean": "rm -rf doc/jsdoc/bin",
		"doc": "npx jsdoc -c doc/jsdoc/conf.json -d doc/jsdoc/bin -r src README.md",
		"lint": "npx eslint src test",
		"jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js test",
		"prepublishOnly": "npm run build",
		"start": "node index",
		"test": "npm run lint && npm run jest"
	},
	"dependencies": {
		"es-main": "1.2.0",
		"word-wrap": "1.2.3"
	},
	"devDependencies": {
		"eslint": "8.30.0",
		"eslint-plugin-jest": "27.1.7",
		"jest": "29.3.1",
		"jsdoc": "4.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"eslintConfig": {
		"env": {
			"node": true
		},
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"jest"
		]
	},
	"jest": {
		"testEnvironment": "node",
		"verbose": true
	}
}
